<%= simple_form_for @plato, :html => { class: 'form-horizontal', multipart: true } do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :precio %>
    <%= f.association :TipoPlato %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
